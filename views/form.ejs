<link rel="stylesheet" href="/stylesheets/style.css" />
<div class="form">
  <form method="POST" action="/new">
    <h2>New Message</h2>
    <input
      type="text"
      name="author"
      autocomplete="off"
      placeholder="Name"
      required
      id="author"
    />
    <textarea
      type="text"
      name="message"
      placeholder="Write your post..."
      required
      id="message"
      autocomplete="off"
    >
    </textarea>
    <div class="btnContainer">
      <a href="/">Cancel</a>
      <button type="submit" value="submit">Add Post</button>
    </div>
  </form>
</div>
